<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="../../css/style.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <%- include('header'); %>
   <main>
        <div class="collapse designCollapse" id="collapseExample">
            <div class="card card-body textProduct" id="listProduct">
                <p>No hay productos</p>
            </div>
        </div>
        <div class="collapse designCollapseLogin" id="collapseLogin">
            <div class="card posicionLogin" id="listProduct">
                <h2 class="text-center">Login</h2>
                <form id="formLogin">
                    <input class="form-control" placeholder="Ingrese su nombre" type="text" name="email" id="email">
                    <br>
                    <input class="form-control" placeholder="Ingrese su contraseña" type="password" name="passwordUser" id="passwordUser">
                    <br>
                    <div id="divAlert"></div>
                    <input type="submit" class="btn btn-primary w-100" value="Iniciar">
                </form>
            </div>
        </div>
        <div class="shade rounded m-4">
            <%product.map(element => { %>
                <div class="d-flex justify-content-around align-items-center">
                    <div>
                        <img src=<%=element.image%> class='m-4 text-size-3' alt="imagen producto" width="500">
                    </div>
                    <div>
                        <h2 class="text-center"><%=element.name%></h2>
                        <p class="text-center"><b>$<%=element.price%></b></p>
                        <h2 class="text-center">Descripción</h2>
                        <p class="text-center"><%=element.description%></p>
                        <div class="d-flex justify-content-center align-items-center mt-lg-5">
                            <input type="button" id="btnLess" value="-" class="btn btn-outline-primary w-25">
                            <input type="number" name="count" id="btnCount" class="w-25 text-center form-control bg-light" disabled value="0">
                            <input type="button" value="+" id="btnBig" class="btn btn-outline-primary w-25">
                        </div>
                        <div class="d-flex justify-content-center align-items-center">
                            <button class="btn btn-primary buyProduct" id="btnBuy" data-bs-target="<%=element.code%>">Comprar</button>
                        </div>
                    </div>
                </div>
            <%});%>
        </div>
    </main>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="../../script/product.js"></script>
    <script type="module" src="/script/carrito.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>